@model Efs.ViewModels.CartridgeDetailViewModel

<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">Add Employee</h1>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form asp-action="AddCartridge" id="adddata" method="post">

                    <div asp-validation-summary="ModelOnly" class="alet alert-danger p2" role="alert"></div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="printer_brand" class="form-label">
                                <i class="fas fa-industry text-primary"></i> Printer Brand
                            </label>
                            <input type="text" asp-for="printer_brand" class="form-control" />
                            <span asp-validation-for="printer_brand" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="printer_model" class="form-label">
                                <i class="fas fa-tools text-info"></i> Printer Model
                            </label>
                            <input type="text" asp-for="printer_model" class="form-control" />
                            <span asp-validation-for="printer_model" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="cartridge_colour" class="form-label">
                                <i class="fas fa-palette text-danger"></i> Cartridge Colour
                            </label>
                            <input type="text" asp-for="cartridge_colour" class="form-control" />
                            <span asp-validation-for="cartridge_colour" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="cartridge_number" class="form-label">
                                <i class="fas fa-hashtag text-warning"></i> Cartridge Number
                            </label>
                            <input type="text" asp-for="cartridge_number" class="form-control" />
                            <span asp-validation-for="cartridge_number" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="cartridge_partNo" class="form-label">
                                <i class="fas fa-barcode text-success"></i> Cartridge Part Number
                            </label>
                            <input type="text" asp-for="cartridge_partNo" class="form-control" />
                            <span asp-validation-for="cartridge_partNo" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="stock_quantity" class="form-label">
                                <i class="fas fa-boxes text-success"></i> Stock Quantity
                            </label>
                            <input type="number" asp-for="stock_quantity" class="form-control" />
                            <span asp-validation-for="stock_quantity" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div class="mt-3 text-center">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

