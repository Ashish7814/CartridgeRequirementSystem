@model Efs.ViewModels.CartridgeDetailViewModel

<div class="modal fade" id="cartridgeDetails" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="exampleModalLabel">
                    <i class="fas fa-print"></i> Cartridge Details
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-4">


                <div class="text-center mb-5">
                        <h3 class="fw-bold">@Model.printer_brand Cartridge</h3>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><i class="fas fa-tools text-primary"></i> <strong>Printer Model:</strong> @Model.printer_model</p>
                        <p><i class="fas fa-palette text-danger"></i> <strong>Cartridge Color:</strong> <span class="badge bg-dark">@Model.cartridge_colour</span></p>
                    </div>
                    <div class="col-md-6">
                        <p><i class="fas fa-hashtag text-warning"></i> <strong>Cartridge Number:</strong> @Model.cartridge_number</p>
                        <p><i class="fas fa-barcode text-success"></i> <strong>Cartridge Part No:</strong> @Model.cartridge_partNo</p>
                    </div>
                </div>

                <hr class="my-3">

                <div class="text-center">
                    <p class="fw-bold">
                        <i class="fas fa-boxes text-success"></i> Stock Quantity:
                        <span class="badge bg-success px-3 py-2 fs-6">@Model.stock_quantity</span>
                    </p>
                </div>
            </div>

            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Close
                </button>
                
            </div>
        </div>
    </div>
</div>
