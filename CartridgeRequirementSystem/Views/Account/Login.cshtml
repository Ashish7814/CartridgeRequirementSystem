@model Efs.ViewModels.LoginViewModel
@{
    Layout = "";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row g-0 bg-white shadow rounded-4 overflow-hidden w-75">
        <!-- Left Side - Signup Form -->
        <div class="col-md-6 p-5">
            <h4 class="fw-bold mb-4">Welcome to Cartridge Requirement System</h4>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="email" class="control-label">Email</label>
                    <input type="email" asp-for="email" class="form-control" placeholder="Email">
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="password" class="control-label">Password</label>
                    <input asp-for="password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">LogIn</button>
            </form>
            <div class="text-center my-3">or</div>
            <p class="mt-3 text-center">Don't have an account? <a asp-action="SignUp" asp-controller="Account" class="text-primary">SignUp</a></p>
        </div>

        <!-- Right Side - Cartridge Image -->
        <div class="col-md-6 col-12 text-center bg-light d-flex align-items-center justify-content-center">
            <img src="~/img/cartridge.jpg" alt="Cartridge Image" class="img-fluid rounded-3" style="max-width: 450px; width: 100%; max-height: 450px; object-fit: cover;">
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
